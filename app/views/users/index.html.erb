<h1>Calendar Users</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>UNM Net ID</th>
      <th>Name</th>
      <th>Can View Private</th>
      <th>Admin</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.netid %></td>
        <td><%= user.name %></td>
        <td><%= user.private.yesno %></td>
        <td><%= user.admin.yesno %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'badge' %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'badge' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-warning' %>
